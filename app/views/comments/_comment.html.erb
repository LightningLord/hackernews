<div class = "comment">
  <p><%= @comment.content %></p>
  <p>By <%= @comment.user.name %></p>
  <p><%= @comment.created_at %></p>
  <p>Points: <span class="comment_points"><%= @comment.vote_count %></span></p>

  <% if @comment.user == current_user %>
    <%= link_to "Edit Comment", edit_post_comment_path(@comment.post, @comment), remote: true, :class => 'edit', class: "edit" %>
    <%= link_to "Delete Comment", post_comment_path(@comment.post, @comment), :method => :delete , remote: true, class: "delete" %>
  <% end %>
  <%= render :partial => "votes/comment_vote" %>
</div>
