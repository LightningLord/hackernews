<h1><%=@post.title%></h1>
<p>By <%=link_to @post.user.name, @post.user%></p>
<p><%=@post.created_at%></p>
<p><%=@post.content%></p>
<% if @post.user == current_user %>
  <%= link_to "Delete Post", post_path(@post), :method => :delete %>
  <%= link_to "Edit Post", edit_post_path(@post) %>
<% end %>
<div id = "comments">
<h2>Comments</h2>
<% @post.comments.each do |comment|  %>
  <div class = "comment">
    <p><%= comment.content %></p>
    <p>By <%= comment.user.name %></p>
    <p><%= comment.created_at %></p>
    <% if comment.user == current_user %>
      <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %>
      <%= link_to "Delete Comment", post_comment_path(@post, comment), :method => :delete, remote: true %>
    <% end %>
  </div>
<% end %>
</div>
<% if current_user %>
<h3>New Comment</h3>
  <ul>
    <%= form_for [@post, Comment.new], remote: true do |f| %>
    <li><%= f.label "Content" %></li>
    <li><%= f.text_field :content %></li>
    <%= f.submit %>
    <% end %>
  </ul>
<% else %>
  <p>You must be logged in to comment!</p>
<% end %>
